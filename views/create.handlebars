<h1>Create</h1>
<form action="/items/create" method="post">
    <label for="">Title: </label><input name="title" type="text" id='title-input'>
    {{#with newItem.errors.title as |error|}}<span class="error">{{error.message}}</span>{{/with}}
    <label for="">Image URL: </label><input name="imageUrl" type="text" id='imageUrl-input' value = "{{newItem.imageUrl}}">
    {{#with newItem.errors.imageUrl as |error|}}<span class="error">{{error.message}}</span>{{/with}}
    <label for="">Description: </label><textarea name="description" type="text" id='description-input'>{{newItem.description}}</textarea>
    {{#with newItem.errors.description as |error|}}<span class="error">{{error.message}}</span>{{/with}}
    <button id="submit-button" type="submit">Submit</button>
</form>