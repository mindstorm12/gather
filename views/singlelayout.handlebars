
    <div class="single-item-container">
      <div class="single-item-card">
        <div class="single-item-contents">
          <div id="item-title" class="single-item-title">
            {{items.title}}
          </div>
          <div class="single-item-img">
            <img src="{{items.imageUrl}}" alt="">
          </div>
          <div id="item-description" class="single-item-description">
            {{items.description}}
          </div>
